@model BideryaMvcProject.Models.HesapKullanici.KullaniciGirisyapViewModel

<main>

    <!-- arkaplan şekil alanı başlangıcı -->
    <div class="bg-shape">
        <div class="center-images">

            <img src="~/img/shape/shape-1.png" alt="">
        </div>
    </div>
    <!-- arkaplan şekil alanı sonu -->
    <!-- kayıt olma alanı başlangıcı -->
    <section class="signup__area po-rel-z1 pt-80 pb-80">
        <div class="sign__shape">
            <img class="man-1" src="~/img/icon/sign/man-1.png" alt="" />
            <img class="man-2" src="/img/icon/sign/man-2.png" alt=""/>
            <img class="circle" src="~/img/icon/sign/circle.png" alt=""/>
            <img class="zigzag" src="~/img/icon/sign/zigzag.png" alt=""/>
            <img class="dot" src="~/img/icon/sign/dot.png" alt=""/>
            <img class="bg" src="/img/icon/sign/sign-up.png" alt=""/>
        </div>
        <div class="container">
        <form asp-action="SifremiUnuttum" asp-controller="Kullanici" method="post">
            <div class="row">
                <div class="col-xxl-6 offset-xxl-3 col-xl-6 offset-xl-3 col-lg-8 offset-lg-2">
                    <div class="sign__wrapper white-bg">
                        <div class="sign__form">
                            <div class="sign__input-wrapper mb-25">
                                <h5>Şifrenizi Yenilemek İçin E-Mail Adresinizi Giriniz</h5>
                                <div class="sign__input">
                                    <input type="text" asp-for="Email" placeholder="Email Adresi">
                                    <i class="fal fa-envelope"></i>
                                </div>
                            </div>
                        </div>
                        <button type="submit" class="m-btn m-btn-4 w-100">Gönder</button>
                    </div>
                </div>
            </div>
            </form>
        </div>
    </section>
    <!-- kayıt olma alanı sonu -->

</main>
