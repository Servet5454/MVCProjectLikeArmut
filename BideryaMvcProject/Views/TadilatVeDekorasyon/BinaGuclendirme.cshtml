@model BideryaMvcProject.Models.Ilanlar.TadilatVeDekorasyon.BinaGuclendirmeViewModel

<div class="bg-shape">
    <img src="~/img/shape/shape-1.png" alt="">
</div>

<section class="signup__area po-rel-z1 pt-100 pb-145">
    <div class="sign__shape">
        <img class="man-1" src="~/img/icon/sign/man-3.png" alt="">
        <img class="man-2 man-22" src="~/img/icon/sign/man-2.png" alt="">
        <img class="circle" src="~/img/icon/sign/circle.png" alt="">
        <img class="zigzag" src="~/img/icon/sign/zigzag.png" alt="">
        <img class="dot" src="~/img/icon/sign/dot.png" alt="">
        <img class="bg" src="~/img/icon/sign/sign-up.png" alt="">
        <img class="flower" src="~/img/icon/sign/flower.png" alt="">
    </div>


    <header class="header-survey">
        <h1 id="title" class="text-center text-shadow">Bina Güçlendirme</h1>
        <p id="description" class="description text-center">
            Daha kaliteli hizmet alabilmek İçin lütfen formu ve açıklamaları detaylı doldurunuz
        </p>
    </header>

    <div class="container">
        <form asp-action="BinaGuclendirme" asp-controller="TadilatVeDekorasyon" method="post">
            <div class="row">
                <div class="col-xxl-8 col-xl-6 col-lg-8 mx-xxl-auto">
                    <div class="sign__wrapper">
                        <div class="sign__form">
                            <div class="sign__input-wrapper mb-25">
                                <select id="dropdown" asp-for="BlokSayisi" class="m-btn m-btn-4 w-100" required>
                                    <option disable select>Güçlendirme Yapılacak Blok Sayısını Belirtiniz</option>
                                    <option value="1">1</option>
                                    <option value="2">2</option>
                                    <option value="3">3</option>
                                    <option value="4">4</option>
                                    <option value="5">5</option>
                                    <option value="5'den Fazla">5'den Fazla</option>
                                </select>
                            </div>

                            <div class="sign__input-wrapper mb-25">
                                <select id="dropdown" asp-for="KatSayisi" class="m-btn m-btn-4 w-100" required>
                                    <option disable select>Güçlendirme Yapılacak Blok Kaç Katlı?</option>
                                    <option value="1">1</option>
                                    <option value="2">2</option>
                                    <option value="3">3</option>
                                    <option value="4">4</option>
                                    <option value="5">5</option>
                                    <option value="6">6</option>
                                    <option value="7">7</option>
                                    <option value="8">8</option>
                                    <option value="9">9</option>
                                    <option value="10'den Fazla">10'dan Fazla</option>
                                </select>
                            </div>

                            <div class="sign__input-wrapper mb-25">
                                <select id="dropdown" asp-for="TabanAlani" class="m-btn m-btn-4 w-100" required>
                                    <option disable select>Güçlendirme Yapılacak Binanın Taban Alanını Belirtiniz</option>
                                    <option value="0-79 M²">0-79 M²</option>
                                    <option value="80-149 M²">80-149 M²</option>
                                    <option value="150-249 M²">150-249 M²</option>
                                    <option value="250-499 M²">250-499 M²</option>
                                    <option value="500-999 M²">500-999 M²</option>
                                    <option value="999 M² ve Üzeri">999 M² ve Üzeri</option>
                                </select>
                            </div>

                            <div class="sign__input-wrapper mb-25">

                                <select id="turkiye_illeri" asp-for="Il" class="m-btn m-btn-4 w-100" required onchange="showSelectedIl()">
                                    <option disabled selected>Hizmet İstediğiniz İli Seçiniz</option>
                                </select>
                                <br />
                                <br />
                                <select id="turkiye_ilceler" asp-for="Ilce" class="m-btn m-btn-4 w-100" required>
                                    <option disabled selected>Hizmet İstediğiniz İlçeyi Seçiniz</option>
                                </select>

                            </div>

                            <div class="contact__input textarea">
                                <textarea asp-for="Aciklama" placeholder="Belirtmek İstediğiniz Ek Açıklamaları Bu Alana Yazabilirsiniz" required id="form"></textarea>
                            </div>

                            <button type="submit" class="m-btn m-btn-4 w-100">Talep Oluştur</button>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</section>

<script>window.onload = function () {
        const hizmetVerenCheckbox = document.getElementById("m-hizmet-veren");
        const hizmetArayanCheckbox = document.getElementById("m-hizmet-arayan");
        hizmetVerenCheckbox.checked = false;
        hizmetArayanCheckbox.checked = true;
    };


    function toggleCheck(checkboxId) {
        const checkbox = document.getElementById(checkboxId);
        const checkboxes = document.getElementsByName("hizmet");

        if (checkbox.checked) {
            checkboxes.forEach((item) => {
                if (item.id !== checkboxId) {
                    item.checked = false;
                }
            });
        } else {
            checkbox.checked = true;
        }
    }</script>


<script src=~/FormSayfasi/FormSayfa.js></script>

